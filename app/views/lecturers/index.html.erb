<h1 class="mb-4">All Lecturers</h1>

<div class="row">
  <% @lecturers.each do |lecturer| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if lecturer.image.present? %>
          <%= image_tag lecturer.image, class: 'card-img-top img-thumbnail', alt: lecturer.name %>
        <% else %>
          <%= image_tag 'https://via.placeholder.com/150', class: 'card-img-top img-thumbnail', alt: 'Placeholder Image' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to lecturer.name, lecturer, class: 'card-link' %></h5>
          <p class="card-text"><%= lecturer.email %></p>
          <%= link_to 'View Profile', lecturer_path(lecturer), class: 'btn btn-sm btn-outline-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>