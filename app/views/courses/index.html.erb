<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>All Courses</h1>
  <% if @current_lecturer.present? %>
    <%= link_to "Create New Course", new_course_path, class: "btn btn-success" %>
  <% end %>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if course.image.present? %>
          <%= image_tag course.image, class: 'card-img-top', alt: course.name, style: "height: 200px; object-fit: cover;" %>
        <% else %>
          <%= image_tag 'https://via.placeholder.com/150?text=No+Image', class: 'card-img-top', alt: 'Placeholder Image', style: "height: 200px; object-fit: cover;" %>
        <% end %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= link_to course.name, course_path(course) %></h5>
          <p class="card-text flex-grow-1"><%= truncate(course.intro, length: 100) %></p>
          <%= link_to 'View Details', course_path(course), class: 'btn btn-sm btn-outline-primary align-self-start mt-auto' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

